{
  "name": "webrtc-mern-app",
  "version": "1.0.0",
  "description": "Production-grade WebRTC MERN application with voice/video calling and external streaming",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "test:signaling": "cd server && npm test",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build:client": "cd client && npm run build",
    "postinstall": "cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "webrtc",
    "mern",
    "socket.io",
    "video-calling",
    "peer-to-peer",
    "signaling",
    "ice",
    "stun",
    "real-time-communication"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuldeep921997/WebRTC"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
